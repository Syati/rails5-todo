<% provide :title, "Log in" %>
<% provide :meta_description, "Log in" %>

<div class="container">
  <h1>Log in</h1>
  <div class="row">
    <%= form_for(:session, url: login_path) do |f| %>

      <div>
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>
      <div>
        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>
      
      <div>
        <%= f.submit "Log in", class: "btn" %>
      </div>
    <% end %>
  </div>
</div>

