<div class="container">
  <h1>Sign up</h1>
  <div class="row">
    <%= form_for(@user) do |f| %>
      <div>
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>
      <div>
        <%= f.label :email %>
        <%= f.email_field :email %>
      </div>
      <div>
        <%= f.label :password %>
        <%= f.password_field :password %>
      </div>
      <div>
        <%= f.label :password_confirmation, "Confirmation" %>
        <%= f.password_field :password_confirmation %>
      </div>
      <div>
        <%= f.submit "Create my account", class: "btn" %>
      </div>
    <% end %>
  </div>
</div>
